# Anthropic API Key
ANTHROPIC_API_KEY=your_api_key_here

# GitHub Token (for MCP integration)
GITHUB_TOKEN=your_github_token_here

# Notion Integration Token (for MCP integration)
NOTION_TOKEN=your_notion_token_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Slack Integration Tokens (for MCP integration)
# Bot token for basic operations
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
# User OAuth token for broader access (optional)
SLACK_USER_TOKEN=xoxp-your-user-token-here

# Zotero Integration (for MCP integration)
# Get API key from: https://www.zotero.org/settings/keys
ZOTERO_API_KEY=your-zotero-api-key-here
# Get user ID from: https://www.zotero.org/settings/keys
ZOTERO_LIBRARY_ID=your-zotero-user-id-here
# Library type: "user" or "group"
ZOTERO_LIBRARY_TYPE=user